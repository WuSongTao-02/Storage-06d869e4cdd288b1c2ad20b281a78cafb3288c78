<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/X-admin/lib/layui/layui.js"></script>
<script>
    var pageIndex = 1;
    var pageSize = 3;
    var pageCount = 0;
    var rows = 0;

    $(function () {
        GetRows();
        PageList(pageIndex, pageSize);

    });

    //分页数据查询
    function PageList(pageIndex, pageSize) {
        $.ajax({
            type: "POST",
            url: "/LiuJie/GetPageListProbaict",
            data: "{pageIndex:" + pageIndex + ",pageSize:" + pageSize + "}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                pageCount = result.pageCount;
                $("#tbl tr").remove();
                $.each(result.DataList, function (index, data) {
                    $("#tbl").append("<tr><td><input  type='checkbox'name='subcheck'/></td><td>" + data.ProId + "</td><td>" + data.ProName + "</td><td>" + data.ProPrice + "</td><td>" + data.PorGuiGe + "</td><td>" + data.ProCId + "</td><td>" + data.UnId + "</td><td>" + time(data.CreateTime) + "</td><td><a href='#' onclick='return Delete(" + data.ProId + ")'>删除</a><a href='/LiuJie/ChanPingYeMianUpdate?id=" + data.ProId + "'>修改</a></td></tr>");
                })
            },
            error: function (ex) {
                alert(ex.responseText);
            }
        });
    }

    //根据条件分页数据查询
    $("#sosuo").click(function () {
        TiaoJian();
    });

    //根据条件分页数据查询
    function TiaoJian() {
        var ProId = $("#id").val();
        $.ajax({
            type: "POST",
            url: "/LiuJie/GetTiaoJianPageListProbaict",
            data: "{pageIndex:" + pageIndex + ",pageSize:" + pageSize + ",ProId:'" + ProId + "'}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                pageCount = result.pageCount;
                $("#tbl tr").remove();
                $.each(result.DataList, function (index, data) {
                    $("#tbl").append("<tr><td><input  type='checkbox'name='subcheck'/></td><td>" + data.ProId + "</td><td>" + data.ProName + "</td><td>" + data.ProPrice + "</td><td>" + data.PorGuiGe + "</td><td>" + data.ProCId + "</td><td>" + data.UnId + "</td><td>" + time(data.CreateTime) + "</td><td><a onclick='return Delete(" + data.ProId + ")'>删除</a><a href='/LiuJie/ChanPingYeMianUpdate?id=" + data.ProId + "'>修改</a></td></tr>");
                })
            },
            error: function (ex) {
                alert(ex.responseText);
            }
        });
    }

    //时间
    function time(m) {
        var dd = new Date(parseInt(m.substr(6)));
        return dd.toLocaleDateString();
    };

    //总条数
    function GetRows() {
        $.ajax({
            type: "POST",
            url: "/LiuJie/GetRowsProbaict",
            data: "{}",
            dataType: "json",
            contentType: "application/json",
            success: function (result) {
                //获取总条数
                rows = result;
                layui.use(['laypage', 'layer'], function () {
                    var laypage = layui.laypage
                        , layer = layui.layer;
                    //完整功能
                    laypage.render({
                        elem: 'DemoPageList'//分页容器的id
                        , count: rows//总条数
                        , limit: 3
                        , layout: ['count', 'prev', 'page', 'next', 'limit', 'refresh', 'skip']
                        , jump: function (obj, first) {
                            if (!first) {
                                //调用分页的方法
                                PageList(obj.curr, obj.limit);
                            }
                            console.log(obj)
                        }
                    });
                });
            },
            error: function (ex) {
                alert(ex.responseText);
            }
        });
    }

    //删除
    function Delete(id) {
        if (confirm('确认删除该产品吗？')) {
            $.ajax({
                type: "POST",
                url: "/LiuJie/GetDeleteProbaict",
                data: "{id:" + id + "}",
                dataType: "json",
                contentType: "application/json",
                success: function (result) {
                    if (result > 0) {
                        alert("删除成功!");
                        PageList(1, 3);
                    } else {
                        alert("删除失败!");
                    }
                },
                error: function (ex) {
                    $("Error" + ex.responseText);
                }
            });
        }
        return false;
    }
</script>
